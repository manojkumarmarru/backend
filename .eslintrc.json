{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "camelcase": "error",
        "key-spacing": "error",
        "keyword-spacing": [
            "error",
            {
                "after": false,
                "before": true
            }
        ],
        "semi-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "space-before-function-paren": "error",
        "space-in-parens": [
            "error",
            "always"
        ]
    }
}
